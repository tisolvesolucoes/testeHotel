@model SisHotel.Models.Hotel

@{

    ViewBag.Title = "Alterar";
}


<h2>Incluir</h2>
<hr />
<div class="row">
    <form action="/Hotel/Buscar" method="post">
        <div class="col-md-4">Buscar:</div>
        <div class="col-md-8">
            <input type="text" name="Nome">
            <input class="btn btn-warning" type="submit" value="Buscar" required>
        </div>

    </form>
</div>
<form method="post" class="form-horizontal">
    @Html.ValidationSummary(null, new { @class = "text-danger" })
    <fieldset>
        <legend>Alteração de Hotéis:</legend>
        <input type="hidden" value="@Model.id" />
        <input type="hidden" name="Estado" value="SP" />
        <div class="form-group">
            <label class="control-label" for="Nome">
                Nome:
            </label>

            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })

        </div>


        <div class="form-group">
            <label class="control-label" for="Descricao">
                Descrição:
            </label><br>

            <textarea id="Descricao" name="Descricao" rows="4" cols="50">@Model.Descricao</textarea>

        </div>


        <div class="form-group">
            <label class="control-label" for="Avaliacao">
                Avalição:
            </label><br>

                    <select name="avaliacao" id="avaliacao">

                        <option value="1" {@av1}>Ruim</option>
                        <option value="2" {@av2}>Medio</option>
                        <option value="3" {@av3}>Aconchegante</option>
                        <option value="4" {@av4}>Bom</option>
                        <option value="5" {@av5}>Ótimo</option>
                    </select>
        </div>
        <div class="form-group">
            <label class="control-label" for="TipoComodidade">
                Tipo Comodidade:
            </label>
            <br>

            <textarea id="" name="TipoComodidade" rows="4" cols="50">@Model.TipoComodidade</textarea>

        </div>

    </fieldset>


    <fieldset>
        <legend>Endereço Hotéis:</legend>
        <div class="form-group">
            <label class="control-label" for="Logradouro">
                Logradouro:
            </label>

            @Html.EditorFor(model => model.Logradouro, new { htmlAttributes = new { @class = "form-control" } })

        </div>

        <div class="form-group">
            <label class="control-label" for="Numero">
                Numero:
            </label>

            @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control" } })

        </div>

        <div class="form-group">
            <label class="control-label" for="Complemento">
                Complemento:
            </label>

            @Html.EditorFor(model => model.Complemento, new { htmlAttributes = new { @class = "form-control" } })

        </div>

        <div class="form-group">
            <label class="control-label" for="Cidade">
                Cidade:
            </label>

            @Html.EditorFor(model => model.Cidade, new { htmlAttributes = new { @class = "form-control" } })
        </div>

    </fieldset>

    <input class="btn btn-success" type="submit" value="Gravar">


</form>

<hr />
<div>
    <a href="/Hotel/Index" class="btn btn-info"><< Voltar</a>
    <a href="/Hotel/Excluir/@Model.id" class="btn btn-danger">Excluir</a>

</div>
